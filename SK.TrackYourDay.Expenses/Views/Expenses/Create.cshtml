@model SK.TrackYourDay.Expenses.Models.ViewModels.ExpenseVM
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <div class="form-group margin-b-1">
                    <div class="col-12">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-12">
                        <input asp-for="ExpenseName" class="form-control" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group margin-b-1">
                    <div class="col-12">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-12">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group margin-b-1">
                    <div class="col-12">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-12">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group margin-b-1">
                    <div class="col-12">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-12">
                        <input asp-for="Date" class="form-control" value="02/02/2022" />
                    </div>
                </div>
                <div class="form-group margin-b-1">
                    <div class="col-12">
                        <label asp-for="ExpenseCategory"></label>
                    </div>
                    <div class="col-12">
                        <select asp-for="ExpenseCategory" asp-items="@ViewBag.ExpenseCategoriesDropDown" class="form-control">
                            <option selected>--Select Category--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group margin-b-1">
                    <div class="col-12">
                        <label asp-for="PaymentMethod"></label>
                    </div>
                    <div class="col-12">
                        <select asp-for="PaymentMethod" asp-items="@ViewBag.PaymentMethodsDropDown" class="form-control">
                            <option selected>--Select Category--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group margin-b-2 row">
                    <div class="col-3">
                        <label asp-for="IrregularPayment"></label>
                    </div>
                    <div class="col-1">
                        <input asp-for="IrregularPayment" />
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Create" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}